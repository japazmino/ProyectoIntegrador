<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/Txt_Nombre"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="64dp"
        android:textAlignment="center"
        android:hint="Nombre" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/Txt_Contrasena"
        android:layout_below="@+id/Txt_Nombre"
        android:layout_alignStart="@+id/Txt_Nombre"
        android:layout_marginTop="46dp"
        android:layout_alignEnd="@+id/Txt_Nombre"
        android:textAlignment="center"
        android:hint="Contraseña" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/Txt_ConfContrasena"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/Txt_Contrasena"
        android:layout_alignEnd="@+id/Txt_Contrasena"
        android:textAlignment="center"
        android:hint="Confirmar Contraseña" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Registrarse"
        android:id="@+id/bt_EnviarRegist"
        android:layout_below="@+id/Txt_ConfContrasena"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:background="#ffa500"
        android:textColor="#ffffff" />
</RelativeLayout>